<div class="row" style="margin-top: 20px">
  <div class="w-container">
    <div class="w-embed w-script">
      <div class="row">
        <p id="notice"><%= notice %></p>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <h3 class="">Order#<%= @order.order_number %></h3>
          <table class="table">
            <tbody>
            <tr>
              <td>Status:</td>
              <td><span class="label label-info"><%= @order.aasm_state.humanize %></span></td>
            </tr>
            <tr>
              <td>Name</td>
              <td><%= @order.full_name %></td>
            </tr>
            <tr>
              <td>Phone Number</td>
              <td><%= @order.phone %></td>
            </tr>
            <tr>
              <td>Order Placed On:</td>
              <td><%= @order.created_at %></td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <hr/>
    <%= link_to 'All Orders', customer_orders_path, class: 'btn' %>
  </div>
</div>