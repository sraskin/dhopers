<div class="row" style="margin-top: 20px">
  <div class="w-container">
    <div class="w-embed w-script">
      <div class="row">
        <p id="notice"><%= notice %></p>
      </div>

      <h1>Your orders</h1>

      <table class="table">
        <thead>
        <tr>
          <th>Order Number</th>
          <th>Status</th>
          <th>Placed On</th>
          <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @customer_orders.each do |customer_order| %>
            <tr>
              <td><%= customer_order.order_number %></td>
              <td><%= customer_order.aasm_state %></td>
              <td><%= customer_order.created_at %></td>
              <td><%= link_to 'Show', customer_order_path(customer_order) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Order', new_customer_order_path %>
    </div>
  </div>
</div>
