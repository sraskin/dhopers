<div class="col-xs-9 col-md-offset-1">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form', class: 'form form-inline'  }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group col-xs-12">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="actions col-md-offset-3">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-success' %>
      </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
