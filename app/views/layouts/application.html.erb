<!-- Trigger the modal with a button -->

<div id="trackMyOrder" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title">Track Your Order</h2>
      </div>
      <div class="modal-body">
        <form action="/customer/orders/track" method="get" role="form">
          <div class="form-group col-xs-12">
            <input name="id" value="" placeholder="Your order tracking number. E.G. 1020120" class="form-control col-md-12" style="height: 40px !important;">
          </div>
          <div class="form-group col-xs-12">
            <input type="submit" value="Track Now!" class="btn btn-success">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
